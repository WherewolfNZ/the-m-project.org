extends layout
block content
  .row(class=locals.pageSegment)
    .col-xs-3
      .well.sidebar-nav
        if locals.sidebars
          each sidebar in sidebars
            ul.nav.nav-list
              each link in sidebar
                if link.url
                  if locals.rootSidebar
                    li
                      a(href='/' + link.url + '.html', class=locals.pageSegment == link.url && 'active')= link.name
                  else
                    li
                      a(href='/' + page + '/' + link.url + '.html', class=locals.pageSegment == link.url && 'active')= link.name
                else
                  li.nav-header
                    if link.icon
                      i(class=link.icon)
                    span= link.name
    .col-xs-9
      h1= title
      != content
      .end-link
