extends layout_index

block content
  .container
    .row
      a(href='#')
        img.mproject-icon(src='/img/m-project-icon.png')
      h1.main-title Create cross-platform mobile web apps based on Backbone.js that look stunning native
      h4.main-subtitle The-M-Project is a mobile HTML5 JavaScript framework that helps you build great mobile apps, easy and fast.
      .button-group
        h4.link-button
          a(href='/getting-started.html') Start developing apps
        h4.link-button
          a(href='http://apps.the-m-project.org') Visit the official website
      .group-links
        iframe.github-btn(src='http://ghbtns.com/github-btn.html?user=mwaylabs&repo=The-M-Project&type=watch&count=true', title='Star on GitHub')
        iframe.github-btn(src='http://ghbtns.com/github-btn.html?user=mwaylabs&repo=The-M-Project&type=fork&count=true', title='Fork on GitHub')
        p
          a(href='https://twitter.com/_themproject')
            img(src='/img/twitterbird.png')
            span @_themproject
        p
          a(href='https://groups.google.com/forum/#!forum/themproject')
            img(src='/img/googlegroups.png')
            span Google groups
      .version-button
        h5
          strong
            a(href='https://github.com/mwaylabs/The-M-Project/') Version 2.0 Absinthe
          span &nbsp;&mdash;&nbsp;
          span Latest update on Github 12/12/2013
    include blocks/footer_index